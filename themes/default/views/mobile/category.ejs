<div class="content">
    <% /* Топ фильмом в категории */ %>
    <% if (typeof top === 'object' && top.length) { %>
    <div class="b-newest_slider_wrapper">
        <div id="newest-slider" class="b-newest_slider">
            <div class="b-newest_slider__title">Новые <a href="/<%- page.urls.type %>/<%- page.urls.types.movie %>"><span>фильмы</span></a>, <a href="/<%- page.urls.type %>/<%- page.urls.types.serial %>"><span>сериалы</span></a>, <a href="/<%- page.urls.type %>/<%- page.urls.types.mult %>"><span>мультфильмы</span></a> и <a href="/<%- page.urls.type %>/<%- page.urls.types.anime %>"><span>аниме</span></a> <small class="show-all">(<span>отобразить все новинки</span>)</small></div>
            <div class="b-newest_slider__wrapper">
                <div id="newest-slider-holder" class="b-newest_slider__inner">
                    <div id="newest-slider-content" class="b-newest_slider__list cat-visible" style="transition: transform 0.6s; scrollbar-width: none">
                          <% top.forEach(function (movie) { %>
                              <div class="b-content__inline_item" data-id="" data-url="<%- movie.url %>">
                                  <div class="b-content__inline_item-cover">
                                      <a href="<%- movie.url %>" title="<%- movie.title %>" aria-label="<%- movie.title %>">
                                          <img class="lazy" loading="lazy" src="<%- movie.poster_min %>" data-src="<%- movie.poster %>" data-cinemapress-src="<%- movie.poster %>" data-cinemapress-bg-src="<%- movie.poster %>" data-cinemapress-poster="<%- movie.poster %>" width="110" height="100%" alt="Смотреть <%- movie.title %> на хдрезка онлайн в HD качестве 720p">

                                          <% if (movie.custom.end === 1) { %>
                                          <span class="info">Завершен (все серии)</span>
                                          <% } else if (movie.custom.last_season && movie.custom.last_episode) { %>
                                          <span class="info"><%- movie.custom.last_season %> сезон<br><%- movie.custom.last_episode %> серия</span>
                                          <% } %>
                                      </a>
                                  </div>
                                  <div class="b-content__inline_item-link"> <a href="<%- movie.url %>"><%- movie.title %></a>
                                      <div class="misc"><%- movie.year %>, <%- movie.country %>, <%- movie.genre %></div>
                                  </div>
                              </div>

                          <% }); %>
                    </div>
                </div>
            </div>
            <!-- <span class="cntrl prev" data-to="prev"></span> -->
            <!-- <span class="cntrl next" data-to="next"></span> -->
        </div>
    </div>
    <% } %>
</div>

<div class="info">
    <a href="<%- page.protocol %><%- page.domain %>/"><%- page.l.home %></a> » <%= page.title %>
</div>

<div class="clear"></div>

<h1><%- page.h1 %></h1>

<div class="clear"></div>

<% if (typeof content === 'object' && page.current_page === 1) { %>
    <div class="cinemapress-content">
        <% if (content.image) { %>
            <img class="lazy" loading="lazy" src="<%- content.image %>" data-src="<%- content.image %>" class="cinemapress-content-image" alt="<% content.title %>">
        <% } %>
        <% if (content.description) { %>
            <div class="cinemapress-content-description">
                <%- content.description %>
            </div>
        <% } %>
        <div class="cinemapress-content-publish">
            <% if (content.tags) { %>
                <span class="cinemapress-content-publish-tags">
                    <img loading="lazy" src="data:image/svg+xml;utf8;base64,"
                    style="width: 10px;"> <%- content.tags %></span>
            <% } %>
            <% if (content.tags) { %>
                <span class="cinemapress-content-publish-publish">
                    <img loading="lazy" src="data:image/svg+xml;utf8;base64,"
                    style="width: 10px;"> <%- content.publish %></span>
            <% } %>
        </div>
    </div>
    <div class="clear"></div>
<% } %>

<div class="randomMovieCategory">
    <div class="cinemapress-random-category"
         onclick="window.location.href='<%- (page.url.indexOf('?') + 1 ? page.url + '&random=' : page.url + '?random=') %><%- Math.random() %>'">
        <img loading="lazy" src="/themes/default/public/mobile/dice.svg" alt="<%= page.l.random %>">
        <span><%- page.l.lucky %></span>
        <small><%- page.l.random %></small>
    </div>
</div>

<% if (typeof page.sorting === 'object') { %>

    <div class="info block">

        <% page.sorting.forEach(function (sort) { %>

            <div class="clear"></div>

            <% if (sort.active) { %>

                <a href="<%- sort.url %>">
                    <strong><%- sort.name %></strong>
                </a>

            <% } else { %>

                <a href="<%- sort.url %>">
                    <%- sort.name %>
                </a>

            <% } %>

        <% }); %>

    </div>

<% } %>

<% if (typeof movies === 'object' && movies.length) { %>

    <% movies.forEach(function (movie) { %>

        <div class="clear"></div>

        <div class="poster">
            <a href="<%- movie.url %>">
                <img class="lazy" loading="lazy" width="180px" height="270px" src="/files/poster/no.webp" data-src="<%- movie.poster %>" data-cinemapress-src="<%- movie.poster %>" data-cinemapress-bg-src="<%- movie.poster %>" data-cinemapress-poster="<%- movie.poster %>" alt="<%= movie.title %> (<%- movie.year %>)"
                     title="<%= movie.title %> (<%- movie.year %>)">
            </a>
        </div>
        <h3><a href="<%- movie.url %>"><%= movie.title %> (<%- movie.year %>)
                <% if (movie.season) { %> <%- movie.season %> <%- page.l.season %>
                <% } %>
                <% if (movie.episode) { %> <%- movie.episode %> <%- page.l.episode %>
                <% } %>
                <% if (movie.translate) { %> в озвучке <%- movie.translate %>
                <% } %>
            </a></h3>

        <% if (movie.year_url) { %>

            <div class="info">
                <%- page.l.year %>: <%- movie.year_url %>
            </div>

        <% } %>
        <% if (movie.countries_url) { %>

            <div class="info">
                <%- page.l.countries %>: <%- movie.countries_url %>
            </div>

        <% } %>
        <% if (movie.genres_url) { %>

            <div class="info">
                <%- page.l.genres %>: <%- movie.genres_url %>
            </div>

        <% } %>

        <% if (movie.quality) { %>

            <div class="info" style="line-height: 2;">
                <%- page.l.quality %>: <%- movie.quality %>
            </div>

        <% } %>
        <% if (movie.translate) { %>

            <div class="info" style="line-height: 2;">
                <%- page.l.translate %>: <%- movie.translate %>
            </div>

        <% } %>

        <div class="clear"></div>

        <% if (movie.kp_vote) { %>
            <div class="info">
                <div class="logo-kp"></div>
                <span style="color:#F56504; font-weight: 800; font-size: 18px;">&nbsp;<%- movie.kp_rating / 10 %>&nbsp;</span>
                <% for (var kp = 10; kp >= 1; kp--) {
                    var star_kp = (Math.round(movie.kp_rating / 10) >= kp)
                            ? '<div class="star-true star-true-kp"></div>'
                            : '<div class="star-false star-false-kp"></div>'; %>
                <%- star_kp %>
                <% } %>
            </div>
        <% } %>

        <% if (movie.imdb_vote) { %>
            <div class="info">
                <div class="logo-imdb"></div>
                <span style="color:#E3B71E; font-weight: 800; font-size: 18px;">&nbsp;<%- movie.imdb_rating / 10 %>&nbsp;</span>
                <% for (var imdb = 10; imdb >= 1; imdb--) {
                    var star_imdb = (Math.round(movie.imdb_rating / 10) >= imdb)
                            ? '<div class="star-true star-true-imdb"></div>'
                            : '<div class="star-false star-false-imdb"></div>'; %>
                <%- star_imdb %>
                <% } %>
            </div>
        <% } %>

        <div class="clear"></div>

        <% if (movie.description_short) { %>

            <div class="description">
                <%- movie.description_short %>...
            </div>

        <% } %>

    <% }); %>

<% } %>

<div class="clear"></div>

<% if (typeof page.pagination === 'object') { %>
    <div class="info block pagination">
        <% if (page.pagination.first) { %><a href="<%- page.pagination.first.link %>"
                                             rel="nofollow"><%- page.pagination.first.number %></a><span class="dots">...</span>
        <% } %>
        <% if (page.pagination.prev.length) { %><% page.pagination.prev.forEach(function (prev) { %><a
                href="<%- prev.link %>" rel="nofollow"><%- prev.number %></a><% }); %><span class="dots">...</span>
        <% } %>
        <strong><span><%- page.pagination.current %></span></strong>
        <% if (page.pagination.next.length) { %><span
                class="dots">...</span><% page.pagination.next.forEach(function (next) { %><a href="<%- next.link %>"
                                                                                              rel="nofollow"><%- next.number %></a><% }); %>
        <% } %>
        <% if (page.pagination.last) { %><span class="dots">...</span><a href="<%- page.pagination.last.link %>"
                                                                         rel="nofollow"><%- page.pagination.last.number %></a>
        <% } %>
    </div>
<% } %>

