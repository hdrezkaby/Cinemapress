<script>

    function resizeImage() {
        let poster = document.querySelector('.poster img');
        let trailerButton = document.querySelector('.b-sidelinks__link');

        if (poster.style.width != '94.6%') {
            poster.style.width = '94.6%';
            trailerButton.style.width = '94.6%';
        } else {
            poster.style.width = '140px';
            trailerButton.style.width = '90%';
        }
    }

